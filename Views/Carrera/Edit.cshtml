@model ProyectoFinal_VargasValeria.Models.Carrera

@{
    Layout = "_LayoutAdmin"; // Asegurar que use el layout correcto
    ViewData["Title"] = "Editar Carrera";
}

<h2 class="text-center">Editar Carrera</h2>

<div class="container">
    <div class="edit-box">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre de la Carrera</label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-success">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model List<ProyectoFinal_VargasValeria.Models.Carrera>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Carreras";
}

<link rel="stylesheet" href="~/css/styles.css" />

<div class="container">
    <h2 class="text-center">Carreras</h2>

    <div class="d-flex justify-content-between align-items-center search-container">
        <div class="search-box">
            <input type="text" class="form-control" placeholder="Busque una Carrera">
            <button class="btn btn-dark">
                <i class="bi bi-search"></i>
            </button>
        </div>
        <a href="@Url.Action("Create", "Carrera")" class="btn btn-primary rounded-circle">
            <i class="bi bi-plus-lg"></i>
        </a>
    </div>

    <div class="table-responsive mt-4">
        <table class="table table-bordered table-hover">
            <thead class="table-dark text-center">
                <tr>
                    <th>Nombre</th>
                    <th>Cursos</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var carrera in Model)
                    {
                        <tr>
                            <td>@carrera.Nombre</td>
                            <td>
                                @if (carrera.CursosCarreras != null && carrera.CursosCarreras.Any())
                                {
                                    <ul class="m-0 p-0">
                                        @foreach (var curso in carrera.CursosCarreras)
                                        {
                                            <li>@curso.Curso.Nombre</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Sin cursos</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@carrera.Id" class="btn btn-outline-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@carrera.Id" class="btn btn-outline-danger">Borrar</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No hay carreras registradas.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- Agrega aquí scripts específicos de la vista -->
}

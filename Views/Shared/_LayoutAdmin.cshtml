<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true">
</head>

<body>
    <!-- Barra de navegación -->
    <header>
        <nav class="navbar">
            <div class="logo">Universidad</div>
            <ul class="nav-links">
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("Index", "Carrera")">Carreras</a></li>
                <li><a href="#">Gestión estudiantes</a></li>
                <li><a href="#">Cursos</a></li>
                <li><a href="#">Docentes</a></li>
            </ul>
            <a href="#" class="logout">Cerrar sesión</a>
        </nav>
    </header>

    <!-- Contenido Principal -->
    <div class="container">
        <main role="main" class="content">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>© 2025 - Universidad</p>
        <div class="social-icons">
            <a href="#"><i class="bi bi-facebook"></i></a>
            <a href="#"><i class="bi bi-instagram"></i></a>
            <a href="#"><i class="bi bi-twitter"></i></a>
            <a href="#"><i class="bi bi-tiktok"></i></a>
        </div>
        <p><a href="https://www.universidad.com">www.universidad.com</a></p>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false) <!-- 🟢 Esto soluciona el error -->
</body>
</html>

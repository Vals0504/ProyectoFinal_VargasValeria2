<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true">
</head>

<body>
    <!-- Barra de navegación -->
    <header>
        <nav class="navbar">
            <div class="logo">Universidad</div>
            <ul class="nav-links">
                <li><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li><a asp-controller="Carrera" asp-action="Index">Carreras</a></li>
                <li><a asp-controller="GestionSede" asp-action="Index">GestionSede</a></li>
                <li><a asp-controller="GestionCursos" asp-action="Index">Cursos</a></li>
				<li><a asp-controller="GestionEstudiante" asp-action="Index">Gestión estudiantes</a></li>
                <li><a asp-controller="GestionDocente" asp-action="Index">Docentes</a></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm logout-btn">Cerrar sesión</button>
                    </form>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Contenido Principal -->
    <div class="container">
        <main role="main" class="content">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>© 2025 - Universidad</p>
        <div class="social-icons">
            <a href="#"><i class="bi bi-facebook"></i></a>
            <a href="#"><i class="bi bi-instagram"></i></a>
            <a href="#"><i class="bi bi-twitter"></i></a>
            <a href="#"><i class="bi bi-tiktok"></i></a>
        </div>
        <p><a href="https://www.universidad.com">www.universidad.com</a></p>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false) 
</body>
</html>

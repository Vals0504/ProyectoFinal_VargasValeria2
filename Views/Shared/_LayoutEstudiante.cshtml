<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Universidad</title>

    <!-- Bootstrap y Estilos -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/estudiante.css" asp-append-version="true">

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>

<body>
    <!--  Barra de navegación -->
    <header>
        <nav class="navbar">
            <span class="logo">Universidad</span>
            <ul class="nav-links">
                <li><a asp-controller="EstudianteDashboard" asp-action="Index">Home</a></li>
                <li><a asp-controller="Estudiante" asp-action="SobreNosotros">Sobre nosotros</a></li>
                <li><a asp-controller="Estudiante" asp-action="Carreras">Carreras</a></li>
                <li><a asp-controller="Estudiante" asp-action="CursosInscritos">Cursos Inscritos</a></li>
                <li><a asp-controller="Estudiante" asp-action="Contacto">Contacto</a></li>

                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm logout-btn">Cerrar sesión</button>
                    </form>
                </li>

            </ul>
        </nav>
    </header>

    <!--  Contenido Principal -->
    <div class="container mt-4">
        <main role="main" class="content">
            @RenderBody()
        </main>
    </div>

    <!--  Footer -->
    <footer class="footer">
        <p>© 2025 - Universidad</p>
        <div class="social-icons">
            <i class="bi bi-facebook"></i>
            <i class="bi bi-instagram"></i>
            <i class="bi bi-twitter"></i>
            <i class="bi bi-tiktok"></i>
        </div>
        <p><a href="https://www.universidad.com">www.universidad.com</a></p>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@model ProyectoFinal_VargasValeria.Models.Docente

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Eliminar Docente";
}

<div class="container">
    <div class="card p-4 shadow-sm bg-light rounded">
        <h2 class="text-center text-uppercase mb-4">Eliminar Docente</h2>

        <h5 class="text-danger">¿Estás seguro que deseas eliminar este docente?</h5>

        <dl class="row">
            <dt class="col-sm-4">Nombre</dt>
            <dd class="col-sm-8">@Model.Nombre</dd>

            <dt class="col-sm-4">Correo</dt>
            <dd class="col-sm-8">@Model.Correo</dd>

            <dt class="col-sm-4">Teléfono</dt>
            <dd class="col-sm-8">@Model.Telefono</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="text-end">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

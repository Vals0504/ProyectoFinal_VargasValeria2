@model ProyectoFinal_VargasValeria.Models.Estudiante

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Editar Estudiante";
}

<div class="container">
    <div class="card p-4 shadow-sm bg-light rounded">
        <h2 class="text-center text-uppercase mb-4">Editar Estudiante</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Identificacion" class="control-label">Identificación</label>
                <input asp-for="Identificacion" class="form-control" />
                <span asp-validation-for="Identificacion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Correo" class="control-label">Correo</label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Telefono" class="control-label">Teléfono</label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control" type="date" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Carreras Asociadas</label>
                <div>
                    @foreach (var carrera in ViewBag.Carreras as List<ProyectoFinal_VargasValeria.Models.Carrera>)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox"
                                   name="CarreraIds"
                                   value="@carrera.Id"
                                   id="carrera_@carrera.Id"
                            @(ViewBag.CarrerasSeleccionadas != null && ((int[])ViewBag.CarrerasSeleccionadas).Contains(carrera.Id) ? "checked" : "") />
                            <label class="form-check-label" for="carrera_@carrera.Id">
                                @carrera.Nombre
                            </label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group text-end mt-4">
                <button type="submit" class="btn btn-success">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
   
}

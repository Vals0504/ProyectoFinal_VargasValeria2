@model ProyectoFinal_VargasValeria.Models.Curso

@{
    ViewData["Title"] = "Crear Curso";
    Layout = "_LayoutAdmin";
}

<h2>Crear Curso</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Creditos"></label>
        <input asp-for="Creditos" class="form-control" />
        <span asp-validation-for="Creditos" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Carreras Asociadas</label>
        <div>
            @foreach (var carrera in ViewBag.Carreras as List<ProyectoFinal_VargasValeria.Models.Carrera>)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="CarreraIds" value="@carrera.Id" id="carrera_@carrera.Id" />
                    <label class="form-check-label" for="carrera_@carrera.Id">
                        @carrera.Nombre
                    </label>
                </div>
            }
        </div>
    </div>


    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
